# =================================
# DWC SERVER - ENVIRONMENT CONFIGURATION
# =================================
# Copy this file to .env and configure your settings

# =================================
# DJANGO SETTINGS (Required)
# =================================
# Generate with: openssl rand -base64 50
SECRET_KEY=change-me-in-production

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,*

# =================================
# API AUTHENTICATION (Required)
# =================================
# Generate with: openssl rand -hex 20
NAS_API_TOKEN=change-me-generate-a-token

# API URL (internal Docker network)
API_BASE_URL=http://admin:7999/api

# =================================
# DATABASE CONFIGURATION
# =================================
# Options: sqlite, mariadb
DATABASE_ENGINE=sqlite

# SQLite settings (default)
DATABASE_NAME=dwc_server.db

# MariaDB settings (uncomment for GTS support)
# DATABASE_ENGINE=mariadb
# DATABASE_NAME=dwc_server
# DATABASE_USER=dwc
# DATABASE_PASSWORD=changeme
# DATABASE_HOST=mariadb
# DATABASE_PORT=3306
# DATABASE_ROOT_PASSWORD=rootpassword

# =================================
# GTS (GLOBAL TRADE STATION)
# =================================
# Pokemon GTS database (requires MariaDB profile)
GTS_DB_NAME=gts
GTS_DB_USER=gts
GTS_DB_PASSWORD=gts

# =================================
# ADMIN PANEL (Optional)
# =================================
# Superuser auto-creation (set all three to enable)
# DJANGO_SUPERUSER_USERNAME=admin
# DJANGO_SUPERUSER_PASSWORD=changeme
# DJANGO_SUPERUSER_EMAIL=admin@example.com

# Gunicorn settings
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=120

# =================================
# LOGGING
# =================================
LOG_LEVEL=INFO
